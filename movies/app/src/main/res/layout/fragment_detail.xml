<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    tools:context="com.example.dododo.finalproject.DetailFragmentFragment">

    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <ImageView
            android:id="@+id/imageviewditals"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:id="@+id/title"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageviewditals"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="overview"
            android:id="@+id/overview"
            android:gravity="left"
            android:padding="10dp"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/imageviewditals"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="88"
            android:id="@+id/rating"
            android:layout_below="@+id/overview"
            android:layout_toRightOf="@+id/imageviewditals"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="release date"
            android:id="@+id/release_date"
            android:layout_below="@+id/rating"
            android:layout_toRightOf="@+id/imageviewditals"
            android:layout_alignRight="@+id/rating"
            android:layout_alignEnd="@+id/rating"
            android:padding="10dp"
            />


    </RelativeLayout>

</ScrollView>
